{
  "$schema": "../../node_modules/turbo/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "with": ["build:storybook"]
    },
    "build:storybook": {
      "outputs": ["storybook-static/**"]
    },
    "dev": {
      "with": ["dev:storybook", "test:watch", "dev:tsdown"]
    },
    "dev:storybook": {
      "cache": false,
      "persistent": true
    },
    "dev:tsdown": {
      "cache": false,
      "persistent": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
