{
  "$schema": "../../node_modules/turbo/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "passThroughEnv": ["SENTRY_AUTH_TOKEN"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["@ssok/ui#build"],
      "with": ["test:watch"],
      "persistent": true
    },
    "test:watch": {
      "cache": false,
      "dependsOn": ["@ssok/ui#build"],
      "persistent": true
    }
  }
}
